{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/**/*.ts",
    "./config/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./webpack.config.ts",
    "./scripts/**/*.ts",
    "./*.config.ts",
    "./cypress/**/*.ts",
    "./cypress/**/*.tsx"
  ]
}
